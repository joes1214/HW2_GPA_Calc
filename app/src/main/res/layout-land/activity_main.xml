<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/clearBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/clearForm"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/compute_gpa"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/gpaEntry1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpaLabel1"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/gpaLabel1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="GPA 1:"
        app:layout_constraintBottom_toTopOf="@+id/gpaEntry1"
        app:layout_constraintStart_toStartOf="@+id/gpaEntry1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/gpaLabel2"
        android:layout_width="39dp"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="GPA 2:"
        app:layout_constraintBottom_toTopOf="@+id/gpaEntry2"
        app:layout_constraintStart_toStartOf="@+id/gpaEntry2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gpaEntry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gpaEntry1"
        app:layout_constraintTop_toBottomOf="@+id/gpaLabel2" />

    <TextView
        android:id="@+id/gpaLabel3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="GPA 3:"
        app:layout_constraintBottom_toTopOf="@+id/gpaEntry3"
        app:layout_constraintStart_toStartOf="@+id/gpaEntry3"
        app:layout_constraintTop_toBottomOf="@+id/gpaEntry1" />

    <EditText
        android:id="@+id/gpaEntry3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpaLabel3" />

    <TextView
        android:id="@+id/gpaLabel4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="GPA 4:"
        app:layout_constraintBottom_toTopOf="@+id/gpaEntry4"
        app:layout_constraintStart_toStartOf="@+id/gpaEntry4"
        app:layout_constraintTop_toBottomOf="@+id/gpaEntry2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/gpaEntry4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gpaEntry3"
        app:layout_constraintTop_toBottomOf="@+id/gpaLabel4" />

    <TextView
        android:id="@+id/gpaLabel5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="GPA 5:"
        app:layout_constraintBottom_toTopOf="@+id/gpaEntry5"
        app:layout_constraintStart_toStartOf="@+id/gpaEntry5"
        app:layout_constraintTop_toBottomOf="@+id/gpaEntry3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/gpaEntry5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpaLabel5" />

    <TextView
        android:id="@+id/emptyBG"
        android:layout_width="155dp"
        android:layout_height="29dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gpaDisplay" />

    <TextView
        android:id="@+id/gpaDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="GPA: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>